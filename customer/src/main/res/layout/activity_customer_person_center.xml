<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_back"
    tools:context="com.lfcx.customer.activity.CustomerUserCenterActivity">
    <LinearLayout
        android:id="@+id/ll_bar_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/title_left_activity_customer_person_center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_nav_back"
            android:gravity="center" />

        <TextView
            android:id="@+id/title_center_activity_customer_person_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/title_right_activity_customer_person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingRight="16dp"
            android:text="设置" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_below="@+id/ll_bar_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_lfzc"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_mobile_activity_customer_person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/login_name"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="15901126195"/>
    </LinearLayout>
    <View
        android:id="@+id/view_one"
        android:layout_below="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_line"/>

    <TextView
        android:id="@+id/tv_money_activity_customer_person_center"
        android:layout_below="@+id/view_one"
        android:layout_width="match_parent"
        android:text="我的钱包"
        android:drawableLeft="@drawable/wallet"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view_two"
        android:layout_below="@+id/tv_money_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_line"/>

    <TextView
        android:id="@+id/tv_stroke_activity_customer_person_center"
        android:layout_below="@+id/view_two"
        android:layout_width="match_parent"
        android:text="我的行程"
        android:drawableLeft="@drawable/trip"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view_three"
        android:layout_below="@+id/tv_stroke_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_line"/>

    <TextView
        android:id="@+id/tv_recommend_activity_customer_person_center"
        android:layout_below="@+id/view_three"
        android:layout_width="match_parent"
        android:text="推荐有奖"
        android:drawableLeft="@drawable/recommend"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view_four"
        android:layout_below="@+id/tv_recommend_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_line"/>


    <TextView
        android:id="@+id/tv_complaint_activity_customer_person_center"
        android:layout_below="@+id/view_four"
        android:layout_width="match_parent"
        android:text="申诉中心"
        android:drawableLeft="@drawable/appeal"
        android:drawableRight="@drawable/right_arrow"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="50dp" />
    <View
        android:id="@+id/view_five"
        android:layout_below="@+id/tv_complaint_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_line"/>
    <TextView
        android:id="@+id/tv_exit_login_activity_customer_person_center"
        android:layout_below="@+id/view_five"
        android:layout_width="match_parent"
        android:text="退出登录"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textColor="@color/blue"
        android:layout_height="50dp" />
    <View
        android:layout_below="@+id/tv_exit_login_activity_customer_person_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_line"/>
</RelativeLayout>
