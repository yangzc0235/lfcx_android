<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lfcx.customer.activity.CustomerLoginActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/icon_lfzc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_bar_height"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_phone" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_title_bar_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_user"
                android:background="@null"
                android:hint="@string/phone_title"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_bar_height"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_password" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_title_bar_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_pwd"
                android:background="@null"
                android:textSize="14sp"
                android:hint="@string/pwd_title" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_bar_height"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_phone" />

            <EditText
                android:id="@+id/et_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_title_bar_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_contact_phone"
                android:background="@null"
                android:textSize="14sp"
                android:hint="请输入推荐人手机号（可不填）" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_bar_height"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/horizontal_padding"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:background="@null"
                android:textSize="14sp"
                android:textColor="@color/c_text_black" />

            <TextView
                android:id="@+id/btn_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:paddingBottom="@dimen/button_padding"
                android:layout_marginRight="@dimen/horizontal_padding"
                android:layout_gravity="center_vertical|right"
                android:background="@color/app_main"
                android:text="获取验证码"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gologin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_code"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="已有账号去登录"
            android:textColor="@color/app_main"
            android:textStyle="bold"
            android:textSize="13sp" />


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_register"
            android:layout_marginTop="25dp"
            android:background="@color/middgrey"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>



