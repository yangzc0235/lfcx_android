<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/c_ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_now_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_spoint" />

            <TextView
                android:id="@+id/tv_now_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_edit_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_now_address"
                android:background="@null"
                android:text="出发地:"
                android:textColorHint="@color/grey"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                />

            <EditText
                android:id="@+id/et_start_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_edit_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_now_address"
                android:background="@null"
                android:editable="false"
                android:textColorHint="@color/c_text_black"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_to_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_epoint" />
            <TextView
                android:id="@+id/tv_to_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_edit_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_to_address"
                android:background="@null"
                android:text="目的地:"
                android:textColorHint="@color/grey"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                />
            <EditText
                android:id="@+id/et_end_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_edit_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_to_address"
                android:background="@null"
                android:editable="false"
                android:textColorHint="@color/c_text_black"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_group_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/group_fill" />
            <TextView
                android:id="@+id/tv_group_fill"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_edit_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_group_fill"
                android:background="@null"
                android:text="几人乘车:"
                android:textColorHint="@color/grey"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                />
            <EditText
                android:id="@+id/et_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_group_fill"
                android:paddingLeft="10dp"
                android:textColor="@color/c_text_black"
                android:textSize="@dimen/small_text_size"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:inputType="number"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/time_fill" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_edit_height"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_time"
                android:background="@null"
                android:text="出发时间:"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                />
            <EditText
                android:id="@+id/et_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_time"
                android:paddingLeft="10dp"
                android:textColor="@color/c_text_black"
                android:textSize="@dimen/small_text_size"
                android:editable="false"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_contact_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/group_fill" />

            <EditText
                android:id="@+id/et_contact_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/iv_contact_user"
                android:paddingLeft="10dp"
                android:text="乘车人电话"
                android:textColor="@color/c_text_black"
                android:textSize="@dimen/small_text_size"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <Button
                android:id="@+id/btn_help_other"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="@dimen/default_edit_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_gologin"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/app_main"
                android:text="帮人叫车"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_with_goods"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="@dimen/default_edit_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_gologin"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/app_main"
                android:text="带小件"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_below="@+id/c_ll_content"
        android:id="@+id/c_iv_guanggao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.9"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元起"
                android:textColor="@color/grey"
                android:textSize="@dimen/normal_text_size"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_gologin"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/app_main"
            android:text="确认发布"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>