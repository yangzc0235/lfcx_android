<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_map_gps" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/horizontal_padding"
        android:layout_marginRight="@dimen/horizontal_padding"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common"
            android:gravity="center_vertical"
            android:text="专车立即出发"
            android:visibility="gone"
            android:textColor="@color/yellow" />

        <ImageView
            android:id="@+id/imgv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/common"
            android:src="@mipmap/icon_delete" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="top"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/vertical_padding"
        android:layout_marginLeft="@dimen/horizontal_padding"
        android:layout_marginRight="@dimen/horizontal_padding"
        android:paddingTop="@dimen/vertical_padding">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_spoint" />

        <EditText
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="你从哪里出发"
            android:paddingRight="10dp"
            android:background="@null"
            android:editable="false"
            android:ellipsize="end"
            android:maxLength="18"
            android:textColor="@color/phone_color"
            android:textColorHint="@color/yellow"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/common"
        android:layout_marginRight="@dimen/common"
        android:background="@color/me_line"/>

    <LinearLayout
        android:id="@+id/destination_container"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="top"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/vertical_padding"
        android:layout_marginLeft="@dimen/horizontal_padding"
        android:layout_marginRight="@dimen/horizontal_padding"
        android:paddingTop="@dimen/vertical_padding">

        <ImageView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_epoint" />

        <EditText
            android:id="@+id/destination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="你要去哪儿"
            android:background="@null"
            android:paddingRight="10dp"
            android:editable="false"
            android:textColor="@color/phone_color"
            android:textColorHint="@color/yellow"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/common"
        android:layout_marginRight="@dimen/common"
        android:background="@color/me_line"/>
    <TextView
        android:id="@+id/routecost_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/vertical_padding"
        android:paddingTop="@dimen/vertical_padding"
        android:text="￥"
        android:layout_marginLeft="@dimen/common"
        android:layout_marginRight="@dimen/common"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/common"
        android:layout_marginRight="@dimen/common"
        android:background="@color/me_line"/>

    <Button
        android:id="@+id/c_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_blue_bg"
        android:gravity="center"
        android:layout_marginLeft="@dimen/common"
        android:layout_marginRight="@dimen/common"
        android:text="@string/destination_button"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_text_size" />
</LinearLayout>