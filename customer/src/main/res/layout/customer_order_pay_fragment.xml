<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="@dimen/vertical_padding"
        android:paddingBottom="@dimen/vertical_padding"
        />
    <View style="@style/divider_line"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="杨师傅车费"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:paddingTop="@dimen/vertical_padding"
        android:paddingBottom="@dimen/vertical_padding"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/vertical_padding"
        android:paddingBottom="@dimen/vertical_padding"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.36"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/grey"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="费用疑问"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:paddingTop="@dimen/vertical_padding"
        android:paddingBottom="@dimen/vertical_padding"
        />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_below="@+id/tv_order_no_activity_pay_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_one_hundred_three_six"
        android:layout_marginTop="@dimen/common"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_four"
            android:text="支付方式"
            android:paddingLeft="@dimen/common_one_five"
            android:textColor="@color/lyt_color"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:background="@color/me_line"/>

        <RadioGroup
            android:id="@+id/rp_activity_pay_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ll_wx_pay_activity_pay_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_four_four"
                android:text="微信支付"
                android:background="@color/white"
                android:button="@null"
                android:paddingLeft="@dimen/common_one_five"
                android:drawablePadding="@dimen/common_one_five"
                android:textColor="@color/lyt_color"
                android:checked="true"
                android:drawableLeft="@mipmap/weixin_pay"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/radiobutton_bg"
                android:paddingRight="@dimen/common_one_five"
                android:textSize="15sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_small"
                android:layout_marginLeft="@dimen/common_one_five"
                android:background="@color/me_line"/>
            <RadioButton
                android:id="@+id/ll_zfb_pay_activity_pay_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_four_four"
                android:text="支付宝支付"
                android:button="@null"
                android:background="@color/white"
                android:paddingLeft="@dimen/common_one_five"
                android:drawablePadding="@dimen/common_one_five"
                android:textColor="@color/lyt_color"
                android:drawableLeft="@mipmap/zhufubao_pay"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/radiobutton_bg"
                android:paddingRight="@dimen/common_one_five"
                android:textSize="15sp"/>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/c_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_btn_height"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/app_main"
        android:gravity="center"
        android:text="确认付款"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>