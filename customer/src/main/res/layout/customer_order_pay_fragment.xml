<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="50dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/bt_check_dialog_corner"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/vertical_padding"
            android:paddingLeft="15dp"
            android:paddingTop="@dimen/vertical_padding"
            android:text="疑问"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/vertical_padding"
            android:paddingTop="@dimen/vertical_padding"
            android:text="杨师傅车费"
            android:textColor="@color/lyt_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/vertical_padding"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/vertical_padding"
            android:drawableRight="@mipmap/icon_close"
            android:textColor="@color/blue"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/vertical_padding"
        android:paddingTop="@dimen/vertical_padding">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="11.36"
            android:textSize="24sp"
            android:textColor="@color/login_name"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="元"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_one_hundred_three_six"
        android:layout_below="@+id/tv_order_no_activity_pay_order"
        android:layout_marginTop="@dimen/common"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_four"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_one_five"
            android:text="支付方式"
            android:textColor="@color/lyt_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:background="@color/me_line" />

        <RadioGroup
            android:id="@+id/rp_activity_pay_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/ll_wx_pay_activity_pay_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_four_four"
                android:background="@color/white"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@mipmap/weixin_pay"
                android:drawablePadding="@dimen/common_one_five"
                android:drawableRight="@drawable/radiobutton_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_one_five"
                android:paddingRight="@dimen/common_one_five"
                android:text="微信支付"
                android:textColor="@color/lyt_color"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_small"
                android:layout_marginLeft="@dimen/common_one_five"
                android:background="@color/me_line" />

            <RadioButton
                android:id="@+id/ll_zfb_pay_activity_pay_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_four_four"
                android:background="@color/white"
                android:button="@null"
                android:drawableLeft="@mipmap/zhufubao_pay"
                android:drawablePadding="@dimen/common_one_five"
                android:drawableRight="@drawable/radiobutton_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_one_five"
                android:paddingRight="@dimen/common_one_five"
                android:text="支付宝支付"
                android:textColor="@color/lyt_color"
                android:textSize="15sp" />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/c_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_btn_height"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_blue_bg"
        android:gravity="center"
        android:text="确认付款"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>