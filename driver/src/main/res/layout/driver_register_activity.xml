<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/action_bar"
        layout="@layout/driver_common_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border_blue"
            android:hint="@string/phone_title"
            android:inputType="number"
            android:paddingLeft="@dimen/short_padding"
            android:textSize="@dimen/hint_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/vertical_padding">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:layout_marginRight="@dimen/vertical_padding"
                android:background="@drawable/border_blue"
                android:paddingLeft="@dimen/short_padding"
                android:textSize="@dimen/hint_text_size"/>

            <Button
                android:id="@+id/btn_getcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/app_main"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border_blue"
            android:layout_marginTop="@dimen/vertical_padding"
            android:hint="@string/pwd_title"
            android:paddingLeft="@dimen/short_padding"
            android:textSize="@dimen/hint_text_size"/>

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border_blue"
            android:layout_marginTop="@dimen/vertical_padding"
            android:hint="@string/confirm_pwd_title"
            android:paddingLeft="@dimen/short_padding"
            android:textSize="@dimen/hint_text_size"/>

        <EditText
            android:id="@+id/et_introduce_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:background="@drawable/border_blue"
            android:layout_marginTop="@dimen/vertical_padding"
            android:hint="推荐人手机号"
            android:paddingLeft="@dimen/short_padding"
            android:textSize="@dimen/hint_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="密码为6-20位任意组合的数字或字母"
            android:textSize="12sp"
            android:textColor="@color/grey"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/app_main"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="请验证您的手机号并设置密码"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

</LinearLayout>



