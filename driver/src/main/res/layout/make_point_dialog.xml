<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/bt_check_dialog_corner"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:text="距您10公里"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_edit_height"
        android:layout_marginTop="100dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/iv_now_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/icon_start" />

        <EditText
            android:id="@+id/et_start_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_now_address"
            android:background="@null"
            android:editable="false"
            android:hint="出发地"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_edit_height"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/iv_to_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/icon_end" />

        <EditText
            android:id="@+id/et_end_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_to_address"
            android:background="@null"
            android:editable="false"
            android:hint="目的地"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bt_circle_dialog_corner"
            android:text="全部"
            />
        <TextView
            android:id="@+id/tv_grab"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="抢单"
            android:background="@drawable/bt_circle_dialog_corner"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/bt_circle_dialog_corner"
            android:text="收车"
            />
    </RelativeLayout>


</LinearLayout>