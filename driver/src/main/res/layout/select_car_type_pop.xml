<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common"
        android:layout_marginRight="@dimen/common"
        android:background="@drawable/bt_check_dialog_corner"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择类型"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/common_two"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:layout_marginLeft="@dimen/common_one_six"
            android:layout_marginRight="@dimen/common_one_six"
            android:layout_marginTop="@dimen/common_two"
            android:background="@color/me_line" />

        <TextView
            android:id="@+id/tv_ss_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_five"
            android:layout_margin="10px"
            android:gravity="center"
            android:text="舒适型"
            android:textColor="@color/blue"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:layout_marginLeft="@dimen/common_one_six"
            android:layout_marginRight="@dimen/common_one_six"
            android:background="@color/me_line" />

        <TextView
            android:id="@+id/tv_hh_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_five"
            android:layout_margin="10px"
            android:gravity="center"
            android:text="豪华型"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:layout_marginLeft="@dimen/common_one_six"
            android:layout_marginRight="@dimen/common_one_six"
            android:background="@color/me_line" />

        <TextView
            android:id="@+id/tv_seven_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_five"
            android:layout_margin="10px"
            android:gravity="center"
            android:text="七座商务"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:layout_marginLeft="@dimen/common_one_six"
            android:layout_marginRight="@dimen/common_one_six"
            android:background="@color/me_line" />

        <TextView
            android:id="@+id/tv_other_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_five"
            android:layout_margin="10px"
            android:gravity="center"
            android:text="其他型"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_small"
            android:layout_marginLeft="@dimen/common_one_six"
            android:layout_marginRight="@dimen/common_one_six"
            android:background="@color/me_line" />

        <TextView
            android:id="@+id/tv_cancel_select_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_four_five"
            android:layout_margin="10px"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/blue" />
    </LinearLayout>
</LinearLayout>